<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured" jcr:title="Title Component" sling:resourceType="cq/gui/components/authoring/dialog">
    <content granite:class="cmp-author_editor" jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/tabs" maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <titlecomponent jcr:primaryType="nt:unstructured" jcr:title="Main Style" sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title jcr:primaryType="nt:unstructured" sling:resourceType="cq/gui/components/authoring/dialog/richtext" fieldLabel="Title" name="./tr_title" useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <format jcr:primaryType="nt:unstructured" features="*" />
                                    <justify jcr:primaryType="nt:unstructured" features="*" />
                                    <lists jcr:primaryType="nt:unstructured" features="*" />
                                    <paraformat jcr:primaryType="nt:unstructured" features="*" />
                                    <links jcr:primaryType="nt:unstructured" features="*" />
                                    <subsuperscript jcr:primaryType="nt:unstructured" features="*" />
                                    <styles jcr:primaryType="nt:unstructured" features="*">
                                        <styles jcr:primaryType="nt:unstructured">
                                            <colorWhite jcr:primaryType="nt:unstructured" cssName="color-white" text="White Color" />
                                            <plainSpan jcr:primaryType="nt:unstructured" cssName="gradient" text="Add gradient to this text" />
                                            <lead jcr:primaryType="nt:unstructured" cssName="invert" text="Invert text style" />
                                            <colorOrange jcr:primaryType="nt:unstructured" cssName="color-brand-2" text="Orange Color" />
                                            <colorBlue jcr:primaryType="nt:unstructured" cssName="alfa-solutions-color-brand-4" text="Blue Color" />
                                            <colorDarkRed jcr:primaryType="nt:unstructured" cssName="alfa-solutions-color-brand-6" text="Dark Red Color" />
                                            <colorGolden jcr:primaryType="nt:unstructured" cssName="alfa-solutions-color-brand-7" text="Golden Color" />
                                            <font jcr:primaryType="nt:unstructured" cssName="alfa-solutions-special-font" text="Use special font" />

                                        </styles>
                                    </styles>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline jcr:primaryType="nt:unstructured" toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,#image,misctools#specialchars,misctools#sourceedit,#styles,#paraformat]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify jcr:primaryType="nt:unstructured" items="[justify#justifyleft,justify#justifycenter,justify#justifyright]" ref="justify" />
                                                <lists jcr:primaryType="nt:unstructured" items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]" ref="lists" />
                                                <styles jcr:primaryType="nt:unstructured" items="styles:getStyles:styles-pulldown" ref="styles" />
                                            </popovers>
                                        </inline>
                                    </cui>
                                </uiSettings>
                            </title>
                            <defaulttypes granite:class="core-title-sizes-default" jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Tag" name="./type">
                                <items jcr:primaryType="nt:unstructured">
                                    <h1 jcr:primaryType="nt:unstructured" text="H1" value="h1" />
                                    <h2 jcr:primaryType="nt:unstructured" text="H2" value="h2" />
                                    <h3 jcr:primaryType="nt:unstructured" text="H3" value="h3" />
                                    <h4 jcr:primaryType="nt:unstructured" text="H4" value="h4" />
                                    <h5 jcr:primaryType="nt:unstructured" text="H5" value="h5" />
                                    <h6 jcr:primaryType="nt:unstructured" text="H6" value="h6" />
                                    <div jcr:primaryType="nt:unstructured" text="Div" value="div" />
                                </items>
                            </defaulttypes>
                            <type jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Title Style" name="./titleStyle">
                                <items jcr:primaryType="nt:unstructured">

                                    <option1 jcr:primaryType="nt:unstructured" text=" Heading Script 1 (94px)" value="title-alfa-solutions-script-1" />
                                    <option2 jcr:primaryType="nt:unstructured" text=" Heading Script 2 (72px)" value="title-alfa-solutions-script-2" />
                                    <option3 jcr:primaryType="nt:unstructured" text=" Heading Script 3 (56px)" value="title-alfa-solutions-script-3" />
                                    <option4 jcr:primaryType="nt:unstructured" text=" Heading Script 4 (50px)" value="title-alfa-solutions-script-4" />
                                    <option5 jcr:primaryType="nt:unstructured" text=" Heading Script 5 (48px)" value="title-alfa-solutions-script-5" />
                                    <option6 jcr:primaryType="nt:unstructured" text=" Heading Script 6 (40px)" value="title-alfa-solutions-script-7" />
                                    <option7 jcr:primaryType="nt:unstructured" text=" Heading Script 7 (36px)" value="title-alfa-solutions-script-6" />
                                    <option8 jcr:primaryType="nt:unstructured" text=" Heading Script 8 (32px)" value="title-alfa-solutions-script-8" />
                                    <option9 jcr:primaryType="nt:unstructured" text=" Heading Script 8 (24px)" value="title-alfa-solutions-script-8" />

                                    <titlereg1 jcr:primaryType="nt:unstructured" text="Heading Regular 1 (80px)" value="title-regular-1" />
                                    <titlereg10 jcr:primaryType="nt:unstructured" text="Heading Regular 2 (75px)" value="title-regular-10" />
                                    <titlereg2 jcr:primaryType="nt:unstructured" text="Heading Regular 3 (60px)" value="title-regular-2" />
                                    <titlereg3 jcr:primaryType="nt:unstructured" text="Heading Regular 4 (48px)" value="title-regular-3" />
                                    <titlereg4 jcr:primaryType="nt:unstructured" text="Heading Regular 5 (36px)" value="title-regular-4" />
                                    <titlereg5 jcr:primaryType="nt:unstructured" text="Heading Regular 6 (30px)" value="title-regular-5" />
                                    <titlereg6 jcr:primaryType="nt:unstructured" text="Heading Regular 7 (24px - bold)" value="title-regular-6" />
                                    <titlereg7 jcr:primaryType="nt:unstructured" text="Heading Regular 8 (24px - normal)" value="title-regular-7" />
                                    <titlereg11 jcr:primaryType="nt:unstructured" text="Heading Regular 9 (20px - bold)" value="title-regular-11" />
                                    <titlereg8 jcr:primaryType="nt:unstructured" text="Heading Regular 10 (18px - extrabold)" value="title-regular-8" />
                                    <titlereg9 jcr:primaryType="nt:unstructured" text="Heading Regular 11 (18px - bold)" value="title-regular-9" />
                                </items>
                            </type>
                            <alignment jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/form/select" fieldLabel="Alignment" name="./align">
                                <items jcr:primaryType="nt:unstructured">
                                    <left jcr:primaryType="nt:unstructured" text="Left" value="align-left" />
                                    <center jcr:primaryType="nt:unstructured" text="Center" value="align-center" />
                                    <right jcr:primaryType="nt:unstructured" text="Right" value="align-right" />
                                </items>
                            </alignment>
                            <fontWeight granite:class="core-title-sizes-default" jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Type / Size" name="./fontWeight">
                                <items jcr:primaryType="nt:unstructured">
                                    <normal jcr:primaryType="nt:unstructured" text="Normal" value="text-normal" />
                                    <light jcr:primaryType="nt:unstructured" text="Light (only Inter font)" value="text-light" />
                                    <bold jcr:primaryType="nt:unstructured" text="Bold" value="text-bold" />
                                    <extrabold jcr:primaryType="nt:unstructured" text="Extra Bold" value="text-extrabold" />
                                </items>
                            </fontWeight>

                            <color granite:class="core-title-sizes-default" jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Text color" name="./color">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1 jcr:primaryType="nt:unstructured" text="Dark" value="color-primary-1" />
                                    <option2 jcr:primaryType="nt:unstructured" text="White" value="color-white" />
                                    <option3 jcr:primaryType="nt:unstructured" text="Grey" value="color-grey-1" />
                                    <option4 jcr:primaryType="nt:unstructured" text=" Green 1" value="alfa-solutions-color-brand-1" />
                                    <option5 jcr:primaryType="nt:unstructured" text=" Green 2" value="alfa-solutions-color-brand-2" />
                                    <option6 jcr:primaryType="nt:unstructured" text="Grren 3" value="alfa-solutions-color-brand-3" />
                                    <option7 jcr:primaryType="nt:unstructured" text="Blue" value="alfa-solutions-color-brand-4" />
                                    <option8 jcr:primaryType="nt:unstructured" text="Dark red" value="alfa-solutions-color-brand-5" />
                                    <option9 jcr:primaryType="nt:unstructured" text="Red" value="alfa-solutions-color-brand-6" />
                                    <option10 jcr:primaryType="nt:unstructured" text="Maroon" value="alfa-solutions-color-brand-7" />
                                    <option11 jcr:primaryType="nt:unstructured" text="Light Maroon" value="alfa-solutions-color-brand-8" />
                                    <option12 jcr:primaryType="nt:unstructured" text="Dark Maroon" value="alfa-solutions-color-brand-9" />
                                </items>
                            </color>

                            <addDecoration jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/form/checkbox" name="./addDecoration" text="Add title decoration (footer)" uncheckedValue="" value="true" />

                        </items>
                    </titlecomponent>
                    <titleposition jcr:primaryType="nt:unstructured" jcr:title="Position and container" sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <textTopPadding jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Padding Top" name="./topPadding">
                                <items jcr:primaryType="nt:unstructured">
                                    <paddingauto jcr:primaryType="nt:unstructured" text="Default" value="" />
                                    <padding0 jcr:primaryType="nt:unstructured" text="0" value="padding-top-0" />
                                    <padding8 jcr:primaryType="nt:unstructured" text="8" value="padding-top-8" />
                                    <padding16 jcr:primaryType="nt:unstructured" text="16" value="padding-top-16" />
                                    <padding24 jcr:primaryType="nt:unstructured" text="24" value="padding-top-24" />
                                    <padding32 jcr:primaryType="nt:unstructured" text="32" value="padding-top-32" />
                                    <padding40 jcr:primaryType="nt:unstructured" text="40" value="padding-top-40" />
                                    <padding48 jcr:primaryType="nt:unstructured" text="48" value="padding-top-48" />
                                    <padding64 jcr:primaryType="nt:unstructured" text="64" value="padding-top-64" />
                                    <padding80 jcr:primaryType="nt:unstructured" text="80" value="padding-top-80" />
                                    <padding100 jcr:primaryType="nt:unstructured" text="100" value="padding-top-100" />
                                    <padding120 jcr:primaryType="nt:unstructured" text="120" value="padding-top-120" />
                                </items>
                            </textTopPadding>
                            <textBottomPadding jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Padding Bottom" name="./bottomPadding">
                                <items jcr:primaryType="nt:unstructured">
                                    <paddingauto jcr:primaryType="nt:unstructured" text="Default Padding" value="" />
                                    <padding0 jcr:primaryType="nt:unstructured" text="0" value="padding-bottom-0" />
                                    <padding8 jcr:primaryType="nt:unstructured" text="8" value="padding-bottom-8" />
                                    <padding16 jcr:primaryType="nt:unstructured" text="16" value="padding-bottom-16" />
                                    <padding24 jcr:primaryType="nt:unstructured" text="24" value="padding-bottom-24" />
                                    <padding32 jcr:primaryType="nt:unstructured" text="32" value="padding-bottom-32" />
                                    <padding40 jcr:primaryType="nt:unstructured" text="40" value="padding-bottom-40" />
                                    <padding48 jcr:primaryType="nt:unstructured" text="48" value="padding-bottom-48" />
                                    <padding64 jcr:primaryType="nt:unstructured" text="64" value="padding-bottom-64" />
                                    <padding80 jcr:primaryType="nt:unstructured" text="80" value="padding-bottom-80" />
                                    <padding100 jcr:primaryType="nt:unstructured" text="100" value="padding-bottom-100" />
                                    <padding120 jcr:primaryType="nt:unstructured" text="120" value="padding-bottom-120" />
                                </items>
                            </textBottomPadding>
                            <addExtraSpacingLeft jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/form/checkbox" name="./addExtraSpacingLeft" text="Add the extra spacing to the left?" uncheckedValue="" value="true" />
                            <container jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Choose the container" name="./container">
                                <items jcr:primaryType="nt:unstructured">
                                    <nocontainer jcr:primaryType="nt:unstructured" text="No container" value="" />
                                    <default jcr:primaryType="nt:unstructured" text="Container Default" value="container-default" />
                                    <medium jcr:primaryType="nt:unstructured" text="Container medium" value="container-medium" />
                                </items>
                            </container>
                        </items>
                    </titleposition>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>